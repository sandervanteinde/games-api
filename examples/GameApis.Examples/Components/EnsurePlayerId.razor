@if (IsAuthenticated())
{
    <CascadingValue Value="_playerId">
        @Authenticated
    </CascadingValue>
    return;
}
<CascadingValue Value="this">
    @NotAuthenticated
</CascadingValue>

@code {

    [Parameter]
    public RenderFragment NotAuthenticated { get; set; } = null!;

    [Parameter]
    public RenderFragment Authenticated { get; set; } = null!;

    [Inject]
    public IPlayerIdAccessor PlayerIdAccessor { get; set; } = null!;

    private PlayerId? _playerId;

    protected override async Task OnInitializedAsync()
    {
        _playerId = await PlayerIdAccessor.GetPlayerIdAsync();
    }

    public async Task RefreshAsync()
    {
        _playerId = await PlayerIdAccessor.GetPlayerIdAsync();
        StateHasChanged();
    }

    private bool IsAuthenticated()
    {
        return _playerId?.InternalId is not null;
    }

}